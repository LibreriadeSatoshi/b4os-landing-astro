---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';

// Metadata específica para la página de inicio
const pageTitle = "B4OS 2025 - Programa Gratuito de Formación Bitcoin para Desarrolladores Senior | Bitcoin 4 Open Source";
const pageDescription = "Únete al programa B4OS 2025: formación gratuita e intensiva en Bitcoin Core y Lightning Network para desarrolladores senior de América Latina, Caribe y España. Registro abierto agosto 2025.";
const pageKeywords = "B4OS 2025, programa Bitcoin desarrolladores, formación Bitcoin gratuita, Bitcoin Core desarrollo, Lightning Network, desarrolladores senior, América Latina Bitcoin, Bitcoin España, residencias Bitcoin, mentoría Bitcoin, FOSS Bitcoin";
---

<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
  ogImage="/og-image-home.jpg"
>
    <!-- Header / Navigation con mejoras SEO -->
    <header class="header" role="banner">
        <nav class="nav" role="navigation" aria-label="Navegación principal">
            <div class="nav-container">
                <div class="nav-brand">
                    <a href="#inicio" class="nav-link" aria-label="Ir al inicio de B4OS">
                        <img src="/b4os.png" alt="B4OS - Bitcoin 4 Open Source Logo" class="logo" width="64" height="64">
                    </a>
                </div>
                <div class="nav-menu" id="navMenu">
                    <a href="#residencias" class="nav-link">Residencias</a>
                    <a href="#cronograma" class="nav-link">Cronograma</a>
                    <a href="#registro" class="nav-link">Registro</a>
                    <a href="#beneficios" class="nav-link">Beneficios</a>
                    <a href="#contacto" class="nav-link">Contacto</a>
                </div>
                <button class="nav-toggle" id="navToggle" aria-label="Abrir menú de navegación" aria-expanded="false">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- Hero Section con mejoras SEO -->
    <section id="inicio" class="hero">
        <div class="hero-background" aria-hidden="true">
            <div class="hero-particles"></div>
        </div>
        <div class="container">
            <div class="hero-content">
                <h1 class="hero-title">
                    <span class="hero-title-main">Bitcoin 4 Open Source</span>
                    <span class="hero-title-sub">Programa gratuito de entrenamiento para desarrolladores senior</span>
                </h1>
                <h2>
                    <p class="hero-description">
                        <strong>B4OS (Bitcoin 4 Open Source)</strong> es un programa de entrenamiento intensivo y <em>completamente gratuito</em>, 
                        diseñado para desarrolladores senior interesados en el ecosistema Bitcoin de código abierto 
                        en <strong>América Latina, el Caribe y España</strong>. 
                        Esta edición 2025 se enfoca en atraer talento cualificado, proporcionándoles las 
                        herramientas y la mentoría necesarias para contribuir de manera efectiva a proyectos 
                        críticos en el espacio <abbr title="Free and Open Source Software">FOSS</abbr> de Bitcoin.
                    </p>
                </h2>
                <div class="hero-actions">
                    <a href="#registro" class="btn btn-primary" rel="nofollow">Registrarse Ahora</a>
                    <a href="#residencias" class="btn btn-secondary">Conocer las Residencias</a>
                </div>
                <div class="hero-stats" role="complementary" aria-label="Estadísticas del programa">
                    <div class="stat">
                        <span class="stat-number">100%</span>
                        <span class="stat-label">Gratuito</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number">2025</span>
                        <span class="stat-label">Nueva Edición</span>
                    </div>
                    <div class="stat">
                        <span class="stat-number">LATAM</span>
                        <span class="stat-label">Caribe</span><br>
                        <span class="stat-label">España</span>
                    </div>
                </div>
                <div class="program-grid">
                    <div class="program-card">
                        <div class="program-icon" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <path d="M8 12l2 2 4-4"></path>
                            </svg>
                        </div>
                        <h3>Para Desarrolladores Senior</h3>
                        <p>Dirigido a profesionales con experiencia en desarrollo de software que buscan especializarse en Bitcoin y tecnologías relacionadas.</p>
                    </div>
                    <div class="program-card">
                        <div class="program-icon" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
                            </svg>
                        </div>
                        <h3>Bitcoin Core & Lightning</h3>
                        <p>Formación especializada en el desarrollo de Bitcoin Core y la implementación de soluciones en Lightning Network.</p>
                    </div>
                    <div class="program-card">
                        <div class="program-icon" aria-hidden="true">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                            </svg>
                        </div>
                        <h3>Comunidad LATAM, el Caribe y España</h3>
                        <p>Conecta con una red de desarrolladores de América Latina, el Caribe y España interesados en Bitcoin y tecnologías descentralizadas.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Residencies section con mejoras SEO -->
    <section id="residencias" class="program-overview">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title">Residencias B4OS</h2>
                <p class="section-subtitle">
                    B4OS ofrece diferentes modalidades de <strong>residencias especializadas</strong> para desarrolladores de América Latina, 
                    el Caribe y España, adaptándose a las necesidades de cada región
                </p>
            </header>
            <div class="program-grid">
                <article class="program-card">
                    <div class="program-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2L2 7V10C2 16 6 20.5 12 22C18 20.5 22 16 22 10V7L12 2Z"></path>
                        </svg>
                    </div>
                    <h3>Sudamérica</h3>
                    <p><strong>Duración:</strong> 1 año completo<br>
                    <strong>Inicio:</strong> Feb. 2025<br>
                    <strong>Ubicación:</strong> Fecha por definir<br>
                    </p>
                    <p>Programa intensivo para desarrolladores senior de países sudamericanos con formación especializada en <strong>Bitcoin Core y Lightning Network</strong>.</p>
                </article>
                
                <article class="program-card">
                    <div class="program-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 10C21 17 12 23 12 23S3 17 3 10A8 8 0 0 1 21 10Z"></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                    </div>
                    <h3>Europa</h3>
                    <p><strong>Duración:</strong> 2 semanas intensivas<br>
                    <strong>Inicio:</strong> Fecha por definir<br>
                    <strong>Ubicación:</strong> Valencia, España<br>
                    </p>
                    <p>Residencia intensiva en Europa, enfocada en <strong>networking y colaboración</strong> con el ecosistema Bitcoin español.</p>
                </article>
                
                <article class="program-card">
                    <div class="program-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21V5A2 2 0 0 0 14 3H10A2 2 0 0 0 8 5V21L12 19L16 21Z"></path>
                            <path d="M12 7V13"></path>
                            <path d="M9 10L15 10"></path>
                        </svg>
                    </div>
                    <h3>Centroamérica & Caribe</h3>
                    <p><strong>Duración:</strong> 1 año completo<br>
                    <strong>Inicio:</strong> Fecha por definir<br>
                    <strong>Ubicación:</strong> El Salvador<br>
                    </p>
                    <p>Programa especial que incluye <strong>trabajo full-time pagado</strong>, diseñado específicamente para desarrolladores de Centroamérica y el Caribe.</p>
                </article>
                
                <article class="program-card">
                    <div class="program-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M12 2L13.09 8.26L20 9L13.09 9.74L12 16L10.91 9.74L4 9L10.91 8.26L12 2Z"></path>
                        </svg>
                    </div>
                    <h3>Especial Grantees</h3>
                    <p><strong>Duración:</strong> 6 semanas<br>
                    <strong>Fechas:</strong> 15 Oct. - Nov. 2026<br>
                    <strong>Ubicación:</strong> México o Bolivia<br>
                    </p>
                    <p>Exclusiva para <strong>grantees del programa</strong>, enfocada en proyectos avanzados y mentoría especializada.</p>
                </article>
            </div>
        </div>
        <aside style="text-align: center; margin-top: 2rem; color: var(--text-light); font-size: var(--font-size-sm);">
            <p>* Las fechas pueden estar sujetas a cambios. Se notificará con antelación a los participantes seleccionados.</p>
        </aside>
    </section>

    <!-- Timeline & Calendar con mejoras SEO -->
    <section id="cronograma" class="timeline">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title">Cronograma B4OS 2025</h2>
                <p class="section-subtitle">
                    Conoce las <strong>fechas importantes</strong> del programa B4OS 2025
                </p>
            </header>
            <div class="timeline-container">
                <article class="timeline-item">
                    <div class="timeline-date">
                        <span class="month">AGO</span>
                        <span class="day">1-31</span>
                    </div>
                    <div class="timeline-content">
                        <h3>Período de Registro</h3>
                        <p>Ventana de <strong>inscripción abierta</strong>. Los desarrolladores pueden aplicar y enviar su información para el proceso de selección.</p>
                    </div>
                </article>
                <article class="timeline-item">
                    <div class="timeline-date">
                        <span class="month">SEP</span>
                        <span class="day">15</span>
                    </div>
                    <div class="timeline-content">
                        <h3>Proceso de Selección</h3>
                        <p><strong>Evaluación de aplicaciones</strong> y entrevistas técnicas con candidatos seleccionados.</p>
                    </div>
                </article>
                <article class="timeline-item">
                    <div class="timeline-date">
                        <span class="month">OCT</span>
                        <span class="day">1</span>
                    </div>
                    <div class="timeline-content">
                        <h3>Inicio del Programa</h3>
                        <p><strong>Comienzo oficial</strong> de las actividades formativas y desafíos técnicos.</p>
                    </div>
                </article>
                <article class="timeline-item">
                    <div class="timeline-date">
                        <span class="month">NOV</span>
                        <span class="day">TBD</span>
                    </div>
                    <div class="timeline-content">
                        <h3>LABITconf</h3>
                        <p>Participación en la <strong>conferencia más importante de Bitcoin</strong> en América Latina.</p>
                    </div>
                </article>
                <article class="timeline-item">
                    <div class="timeline-date">
                        <span class="month">DIC</span>
                        <span class="day">TBD</span>
                    </div>
                    <div class="timeline-content">
                        <h3>B4OS Dev Day Chile</h3>
                        <p><strong>Evento exclusivo</strong> para participantes del programa en Chile.</p>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <!-- Registration Section con mejoras SEO -->
    <section id="registro" class="registration">
        <div class="container">
            <div class="registration-content">
                <div class="registration-info">
                    <h2>¿Listo para unirte a B4OS 2025?</h2>
                    <p>El programa <strong>B4OS 2025</strong> está abierto para desarrolladores senior de América Latina, el Caribe y España. El proceso de <em>registro es completamente gratuito</em>.</p>
                    
                    <div class="requirements">
                        <h3>Requisitos para Aplicar:</h3>
                        <ul>
                            <li><strong>Experiencia en desarrollo</strong> de software (2+ años)</li>
                            <li>Conocimientos sólidos en lenguajes como <strong>C++, Rust, Python o JavaScript</strong></li>
                            <li>Interés genuino en contribuir al <strong>ecosistema open source de Bitcoin</strong></li>
                            <li><strong>Disponibilidad</strong> para participar en el programa completo</li>
                        </ul>
                    </div>
                    <div class="registration-period">
                        <div class="period-badge">
                            <span><strong>Registro abierto:</strong> 1 - 31 de Agosto 2025</span>
                        </div>
                    </div>
                </div>
                <div class="registration-form-container">
                    <form class="registration-form" id="registrationForm" role="form" aria-label="Formulario de registro B4OS 2025">
                        <h3>Formulario de Registro B4OS 2025</h3>
                        
                        <div class="form-group">
                            <label for="name">Nombre o pseudónimo *</label>
                            <input type="text" id="name" name="name" required aria-describedby="name-help">
                            <small id="name-help">Puedes usar tu nombre real o un pseudónimo</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" id="email" name="email" required aria-describedby="email-help">
                            <small id="email-help">Usaremos este email para comunicarnos contigo</small>
                        </div>

                        <div class="form-group">
                            <label for="country">País *</label>
                            <select id="country" name="country" required aria-describedby="country-help">
                                <option value="">Selecciona tu país</option>
                            </select>
                            <small id="country-help">Selecciona el país donde resides actualmente</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="city">Ciudad *</label>
                            <select id="city" name="city" required disabled aria-describedby="city-help">
                                <option value="">Primero selecciona un país</option>
                            </select>
                            <small id="city-help">Tu ciudad de residencia actual</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="experience">Años de experiencia en desarrollo *</label>
                            <select id="experience" name="experience" required>
                                <option value="">Selecciona</option>
                                <option value="2-5">2-5 años</option>
                                <option value="5-10">5-10 años</option>
                                <option value="10+">Más de 10 años</option>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="technologies">Tecnologías principales *</label>
                            <textarea id="technologies" name="technologies" placeholder="Ejemplo: C++, Python, JavaScript, Rust..." required aria-describedby="tech-help"></textarea>
                            <small id="tech-help">Lista los lenguajes y tecnologías que dominas</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="github">GitHub / Portfolio</label>
                            <input type="url" id="github" name="github" placeholder="https://github.com/tu-usuario" aria-describedby="github-help">
                            <small id="github-help">Opcional: comparte tu perfil de GitHub o portfolio</small>
                        </div>
                        
                        <div class="form-group">
                            <label for="motivation">¿Por qué quieres participar en B4OS? *</label>
                            <textarea id="motivation" name="motivation" required aria-describedby="motivation-help"></textarea>
                            <small id="motivation-help">Cuéntanos tu motivación y objetivos con el programa</small>
                        </div>
                        
                        <div class="form-group checkbox-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="terms" required aria-describedby="terms-help">
                                <span>Acepto los <a href="/terminos" target="_blank" rel="noopener">términos y condiciones</a> del programa</span>
                            </label>
                            <small id="terms-help">Debes aceptar los términos para continuar</small>
                        </div>
                        
                        <button type="submit" class="btn btn-primary btn-full">
                            Enviar Aplicación a B4OS 2025
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Benefits Section con mejoras SEO -->
    <section id="beneficios" class="benefits">
        <div class="container">
            <header class="section-header">
                <h2 class="section-title">Beneficios del Programa B4OS</h2>
                <p class="section-subtitle">
                    Descubre todo lo que obtienes al participar en el <strong>programa más completo de formación Bitcoin</strong>
                </p>
            </header>
            <div class="benefits-grid">
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
                            <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
                        </svg>
                    </div>
                    <h3>Formación Especializada</h3>
                    <p>Acceso a <strong>contenido exclusivo</strong> y formación técnica avanzada en Bitcoin Core y Lightning Network impartida por expertos reconocidos.</p>
                </article>
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="3"></circle>
                            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1 1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                        </svg>
                    </div>
                    <h3>Proyectos Reales</h3>
                    <p>Contribuye a <strong>proyectos open source reales</strong> y construye un portafolio sólido mientras aprendes de la mano de mentores expertos.</p>
                </article>
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h3>Red de Contactos</h3>
                    <p>Conecta con desarrolladores, empresarios y expertos del <strong>ecosistema Bitcoin</strong> en toda América Latina, Caribe y España.</p>
                </article>
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polygon points="13,2 3,14 12,14 11,22 21,10 12,10"></polygon>
                        </svg>
                    </div>
                    <h3>Certificación Reconocida</h3>
                    <p>Obtén <strong>certificación reconocida</strong> en el ecosistema Bitcoin al completar exitosamente el programa B4OS.</p>
                </article>
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                            <polyline points="7,10 12,15 17,10"></polyline>
                            <line x1="12" y1="15" x2="12" y2="3"></line>
                        </svg>
                    </div>
                    <h3>Eventos Exclusivos</h3>
                    <p>Acceso a <strong>conferencias Bitcoin</strong> y eventos exclusivos como LABITconf y el B4OS Dev Day para participantes del programa.</p>
                </article>
                <article class="benefit-card">
                    <div class="benefit-icon" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"></circle>
                            <path d="M12 6v6l4 2"></path>
                        </svg>
                    </div>
                    <h3>Mentorías Personalizadas</h3>
                    <p>Sesiones de <strong>mentoría personalizada</strong> con desarrolladores senior y expertos reconocidos del ecosistema Bitcoin.</p>
                </article>
            </div>
        </div>
    </section>

    <!-- Contact / Footer con mejoras SEO -->
    <footer id="contacto" class="footer" role="contentinfo">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <div class="footer-brand">
                        <img src="/b4os.png" alt="B4OS - Bitcoin 4 Open Source Logo" class="footer-logo" width="32" height="32">
                    </div>
                    <p><strong>B4OS (Bitcoin 4 Open Source)</strong> - Programa gratuito de formación técnica para desarrolladores senior interesados en el ecosistema open source de Bitcoin en América Latina, el Caribe y España.</p>
                </div>
                
                <nav class="footer-section" aria-label="Enlaces rápidos">
                    <h4>Enlaces Rápidos</h4>
                    <ul class="footer-links">
                        <li><a href="#residencias">Residencias</a></li>
                        <li><a href="#cronograma">Cronograma</a></li>
                        <li><a href="#registro">Registro</a></li>
                        <li><a href="#beneficios">Beneficios</a></li>
                    </ul>
                </nav>
                
                <nav class="footer-section" aria-label="Recursos externos">
                    <h4>Recursos</h4>
                    <ul class="footer-links">
                        <li><a href="https://www.libreriadesatoshi.com/" target="_blank" rel="noopener">Librería de Satoshi</a></li>
                        <li><a href="https://www.libreriadesatoshi.com/#courses" target="_blank" rel="noopener">Cursos Bitcoin</a></li>
                    </ul>
                </nav>
                
                <div class="footer-section">
                    <h4>Contacto B4OS</h4>
                    <div class="contact-info">
                        <p>
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="16" height="16" aria-hidden="true">
                                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                <polyline points="22,6 12,13 2,6"></polyline>
                            </svg>
                            <a href="mailto:info@b4os.dev">info@b4os.dev</a>
                        </p>
                        <div class="footer-social">
